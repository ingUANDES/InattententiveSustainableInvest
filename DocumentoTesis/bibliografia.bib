	author = {Gabriel, Steven A and Conejo, Antonio J. and Fuller, J David and Hobbs, Benjamin F and Ruiz, Carlos},
	year = {2012},
	note = {Publication Title: Springer Science and business media},
	keywords = {Economics, Finance, Operations research, e-book [online only] – SpringerLink},
