
@article{park_integration_2022,
	title = {Integration of {ESG} {Information} {Into} {Individual} {Investors}’ {Corporate} {Investment} {Decisions}: {Utilizing} the {UTAUT} {Framework}},
	volume = {13},
	issn = {1664-1078},
